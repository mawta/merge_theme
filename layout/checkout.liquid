        }
      .active-bg-after::before{
         background-image:url({{'step_two.svg' | asset_url }})  !important;
          background-repeat: no-repeat;
          background-size: cover;
      }
      .content.prH7 .wrap .ar64 .s8.s8c.active::before {
        background-image: url({{'checked_step.png' | asset_url }}) !important;
        background-repeat: no-repeat;
        background-size: cover;
