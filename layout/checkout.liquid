    <script>
      
      
     $(document).ready(function(){
        function getCookie(key) {
          var keyValue = document.cookie.match('(^|;) ?' + key + '=([^;]*)(;|$)');
          return keyValue ? keyValue[2] : null;
        }
        const currency = getCookie('currency');
        if(currency !== 'USD'){
          const oldCurrency = document.getElementsByClassName("payment-due__price")[0] ;
          $(".total-line__price.payment-due").append(`<p class="convertCurrency" style="margin-top:5px;">${oldCurrency.innerText}</p>`);
          Currency.convertAll("USD", currency, ".convertCurrency", 'money_with_currency_format');
          const newCurrency =  $(".convertCurrency").text();
          $(".convertCurrency").text(`( ${newCurrency} )`);
          
          if(window.innerWidth<992){
            $(".order-summary-toggle__total-recap.total-recap dd").append(`<span class="convertCurrencyMobile" style="margin-top:5px;">${$(".order-summary__emphasis.total-recap__final-price").text()}</span>`);
            Currency.convertAll("USD", currency, ".convertCurrencyMobile", 'money_with_currency_format');
            const newCurrencyMobile =  $(".convertCurrencyMobile").text();
            $(".convertCurrencyMobile").text(`( ${newCurrencyMobile} )`);
            $(".convertCurrency").text(`( ${newCurrencyMobile} )`);
          }
        }
     })
    </script>
    <script type="text/javascript">
        function appplyCustomImgProduct(){
          var imagesSelector = 'table.product-table tr.product div.product-thumbnail__wrapper img.product-thumbnail__image';
          {%- for item in checkout.line_items -%}
              var index = {{ forloop.index0 }};
              var properties = JSON.parse('{{ item.properties | json }}');
              var thumbImage = properties.find(p => p[0] == '_customily-thumb');
              if(!thumbImage){
                thumbImage = properties.find(p => p[0] == '_customily-preview');
              }
              if(thumbImage && thumbImage[1]) {
                  var imgEl = $(imagesSelector)[index];
                  $(imgEl).attr('src', thumbImage[1]);
              }
          {%- endfor -%}
          }
       $(document).ready(function(){
          appplyCustomImgProduct();
      });
    </script>
